{
  "manifest_version": 2,

  "name": "Музыкальный шарик",
  "version": "1.0",
  "background": { "scripts": ["background.js"] },

  "icons": {
    "16": "32.png",
    "32": "48.png",
    "48": "96.png"
  },

  "permissions": [
    "https://music.yandex.ru/*",
    "webNavigation", "https://play.google.com/music/*"
  ],

  "browser_action": {
    "default_title": "Музыкальный Шарик",
    "default_icon": "48.png",
    "default_popup": "popup.html"
  }
}